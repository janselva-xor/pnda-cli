{
  "Parameters" : {
    "instancetypeBastion" : {
      "Type" : "String",
      "Default" : "t2.medium",
      "Description" : "Instance type for the access bastion"
    },
    "instancetypeKafka" : {
      "Type" : "String",
      "Default" : "m4.large",
      "Description" : "Instance type for databus combined instance"
    },
    "instancetypeCdhMgr" : {
      "Type" : "String",
      "Default" : "m4.large",
      "Description" : "Instance type for CDH management"
    },
    "instancetypeCdhDn" : {
      "Type" : "String",
      "Default" : "c4.large",
      "Description" : "Instance type for CDH datanode"
    },
    "instancetypeEdge" : {
      "Type" : "String",
      "Default" : "m4.large",
      "Description" : "Instance type for cluster edge node"
    },
    "instancetypeESMulti" : {
      "Type" : "String",
      "Default" : "t2.medium",
      "Description" : "Instance type for ELK ES cluster multi-role node"
    },
    "instancetypeLogstash" : {
      "Type" : "String",
      "Default" : "t2.medium",
      "Description" : "Instance type for ELK Logstash node"
    },
    "logVolumeSizeGb" : {
      "Type" : "String",
      "Default" : "10",
      "Description" : "Size in GB for the log volume"
    }
  },
  "Resources": {
    "instanceBastion": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeBastion" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "bastion" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "bastion"
          },
          {
            "Key": "node_idx",
            "Value": ""
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {"Ref": "PublicSubnet"},
            "GroupSet": [{"Ref": "sshSg"}],
            "AssociatePublicIpAddress": "true"
          }
        ]
      }
    },

    "instanceKafka": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeKafka" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "kafka-$node_idx$" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "kafka"
          },
          {
            "Key": "node_idx",
            "Value": "$node_idx$"
          }

        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {"Ref": "PrivateSubnet"},
            "GroupSet": [{"Ref": "pndaSg"}]
          },
          {
            "DeleteOnTermination": "true",
            "Description": "Secondary network interface",
            "DeviceIndex": 1,
            "SubnetId": {"Ref": "PublicProducerSubnet"},
            "GroupSet": [{"Ref": "pndaSg"},{"Ref": "kafkaSg"}]
          }
        ],
        "UserData" : { "Fn::Base64" : { "Fn::Join" : ["\n", [
            "#!/bin/bash -v",
            "cat > /etc/network/interfaces <<EOF",
            "auto eth0",
            "iface eth0 inet dhcp",
            { "Fn::Sub": "post-up ip route add default via ${privateSubnetGateway} dev eth0 tab 1" },
            { "Fn::Sub": "post-up ip rule add from ${privateSubnetCidr} tab 1" },
            "auto eth1",
            "iface eth1 inet dhcp",
            { "Fn::Sub": "post-up ip route add default via ${publicProducerSubnetGateway} dev eth1 tab 2" },
            { "Fn::Sub": "post-up ip rule add from ${publicProducerSubnetCidr} tab 2" },
            "EOF",
            "ifdown eth0; ifup eth0",
            "ifdown eth1; ifup eth1"
        ]]}}
      }
    },

    "instanceCdhDn": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeCdhDn" },
        "SubnetId": { "Ref" : "PrivateSubnet" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "hadoop-dn-$node_idx$" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "hadoop-dn"
          },
          {
            "Key": "node_idx",
            "Value": "$node_idx$"
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          },
          {
              "DeviceName"  : "/dev/sdd",
              "Ebs" : { "VolumeSize" : "35" }
          }
        ],
        "SecurityGroupIds": [ {"Ref": "pndaSg"} ]
      }
    },
    "instanceCdhEdge": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeEdge" },
        "SubnetId": { "Ref" : "PrivateSubnet" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "hadoop-edge" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "hadoop-edge"
          },
          {
            "Key": "node_idx",
            "Value": ""
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "SecurityGroupIds": [ {"Ref": "pndaSg"} ]
      }
    },
    "instanceCdhMgr1": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeCdhMgr" },
        "SubnetId": { "Ref" : "PrivateSubnet" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "hadoop-mgr-1" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "hadoop-mgr"
          },
          {
            "Key": "node_idx",
            "Value": ""
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "SecurityGroupIds": [ {"Ref": "pndaSg"} ]
      }
    },
    "instanceESMulti":{
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeESMulti" },
        "SubnetId": { "Ref" : "PrivateSubnet" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "elk-es-multi-$node_idx$" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "elk-es-multi"
          },
          {
            "Key": "node_idx",
            "Value": "$node_idx$"
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "25" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "SecurityGroupIds": [ {"Ref": "pndaSg"} ]
      }
    },
    "instanceLogstash":{
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeLogstash" },
        "SubnetId": { "Ref" : "PrivateSubnet" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "elk-logstash-$node_idx$" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "elk-logstash"
          },
          {
            "Key": "node_idx",
            "Value": "$node_idx$"
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "SecurityGroupIds": [ {"Ref": "pndaSg"} ]
      }
    }
  }
}
